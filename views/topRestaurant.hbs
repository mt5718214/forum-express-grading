<h1>人氣餐廳</h1>
<hr />
<div class="row">
  {{#each restaurants}}
  <div class="card mb-3 col-8 mx-auto">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{this.image}}" class="card-img">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary">收藏數：{{this.favoriteCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <a href="/restaurants/{{this.id}}" class="btn btn-primary">show</a>

          {{#if isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}

        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>